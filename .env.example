# Flask 环境配置
FLASK_ENV=development

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/investment_research_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/investment_research_test

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# DeepSeek API 配置（必需：智能分析功能依赖此 API）
DEEPSEEK_API_KEY=your-deepseek-api-key-here          # 必填，DeepSeek API 密钥
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1        # 可选，API 基础地址
DEEPSEEK_MODEL=deepseek-chat                          # 可选，模型名称
DEEPSEEK_TIMEOUT=60                                   # 可选，请求超时秒数
DEEPSEEK_MAX_RETRIES=3                                # 可选，最大重试次数

# 安全配置
SECRET_KEY=your-secret-key-here
